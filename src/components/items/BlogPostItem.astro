---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

const { post } = Astro.props as { post: CollectionEntry<"blog"> };
---

<a
  href={`/blog/${post.slug}`}
  class="bg-gray-900 p-3 mb-5 rounded shadow-gray-700 shadow group transition-all duration-300 ease-in-out hover:scale-[1.01] flex flex-col sm:flex-row items-center gap-4"
>
  <Image
    src={`/blog/${post.slug}/cover_thumb.jpg`}
    alt={post.data.title}
    class="rounded sm:w-32 sm:h-32 object-cover w-full h-80 object-center sm:order-last"
    height={320}
    width={320}
  />
  <div class="w-full">
    <p class="mb-2">{post.data.date.toLocaleDateString()}</p>
    <h2 class="text-xl font-semibold">
      {post.data.title}
    </h2>
    <p class="text-gray-300">{post.data.excerpt}</p>
  </div>
</a>
