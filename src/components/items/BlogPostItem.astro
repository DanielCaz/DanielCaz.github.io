---
import type { CollectionEntry } from "astro:content";

const { post } = Astro.props as { post: CollectionEntry<"blog"> };
---

<a
  href={`blog/${post.slug}`}
  class="bg-gray-900 p-3 mb-5 rounded shadow-gray-700 shadow group transition-all duration-300 ease-in-out hover:scale-[1.01] block"
>
  <span>{post.data.date.toLocaleDateString()}</span>
  <div class="grid sm:grid-cols-2 gap-3 mt-5">
    <h2 class="text-xl font-semibold relative w-max">
      {post.data.title}
      <div
        class="absolute w-0 group-hover:w-full h-1 left-0 bg-slate-500 text-sm transition-all duration-300 ease-in-out rounded"
      >
      </div>
    </h2>
    <p class="text-gray-300">{post.data.excerpt}</p>
  </div>
</a>
